<!DOCTYPE html>
<html>
  <head>
    <title>CareerTalk</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">CareerTalk</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/topics">CareerTalk</a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to "Sign up", new_user_path %></li>
              <li><%= link_to "#{current_user.name}", user_path(current_user.id) %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_path %></li>
              <li><%= link_to "Sign in", new_session_path %></li>            
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    
    <nav class="navbar navbar-sub">
      <form class="navbar-form navbar-right">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="キーワード">
        </div>
        <button type="Search" class="btn btn-default">Search</button>
      </form>
    </nav>
    
    <%= yield %>
    
    <footer class="footer">
      <div class="container">
        <p class="footer-text">DIC-201803 HiranoMayumi</p>
      </div>
    </footer> 
  </body>
</html>
